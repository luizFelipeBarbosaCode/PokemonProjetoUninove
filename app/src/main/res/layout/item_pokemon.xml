<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_pokemon_img"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        tools:src="@drawable/pokemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_pokemon_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="TESTE"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_pokemon_img" />


    <ImageView
        android:id="@+id/item_pokemon_no_like"
        android:layout_width="22dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_no_like"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_pokemon_img" />

    <ImageView
        android:id="@+id/item_pokemon_like"
        android:layout_width="22dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_like"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_pokemon_img" />


</androidx.constraintlayout.widget.ConstraintLayout>